<%- include('includes/header.ejs') -%>

	<div class="container center">
		<h1>URL Shrinker</h1>
		<form action="/short" method="POST" class="my-4 form-inline">
			<label for="fullUrl" class="sr-only">URL</label>
			<input required placeholder="URL" type="url" name="fullUrl" id="fullUrl" class="form-control col mr-2" />
			<button class="btn btn-success" type="submit">Short This!</button>
		</form>

		<table class="table table-striped table-responsive">
			<thead>
				<tr>
					<th>Long URL</th>
					<th>Short URL</th>
					<th>Clicks</th>
					<th>Created</th>
				</tr>
			</thead>
			<tbody>
				<% shortUrls.forEach(shortUrl=> { %>
			<tr>
				<td><a href="<%= shortUrl.longURL %>"><%= shortUrl.longURL %></a></td>
				<td><a href="<%= shortUrl.short %>"><%= shortUrl.short %></a></td>
				<td><%= shortUrl.clicks %></td>
				<td><%= shortUrl.createdAt %></td>
			</tr>
			<% }) %>
		</tbody>
	</table>
</div>


	<%- include('includes/footer.ejs') -%>